    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-helmet": "^5.2.1",
    "react-hot-loader": "^4.9.0",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0"
  },
  "devDependencies": {
